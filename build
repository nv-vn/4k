#!/bin/bash

#ocamlfind ocamlc -package ulex -syntax camlp4o src/lexer.ml
cd src
ocamllex lexer.mll &&
menhir parser.mly &&
ocamlc -c ast.ml &&
ocamlc -c parser.mli &&
ocamlc -c lexer.ml &&
ocamlc -c parser.ml &&
ocamlc -c interpreter.ml &&
ocamlc -c repl.ml &&
ocamlc -o ../4repl ast.cmo lexer.cmo parser.cmo interpreter.cmo repl.cmo
rm *.cmo *.cmi
rm lexer.ml parser.ml parser.mli
cd ..
